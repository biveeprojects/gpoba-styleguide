<%# Logo component: use picture element to place SVG and PNG fallback %>

<%# --- Dependencies --- %>
<%# core/all.scss %>
<%# components/logo.scss %>

<%# --- Locals --- %>
<% filename ||= "logos/gpoba" # filename (sans extension) of the logo %>
<% classes ||= "logo" # classes on the container %>
<% alt ||= "GPOBA" # alt tag content %>
<% link ||= false %>

<picture class="<%= classes %>">
    <!--[if IE 9]><video style="display: none;"><![endif]-->
    <source type="image/svg+xml" srcset="<%= asset_url config[:images_dir] + '/' + filename + '.svg'%>">
    <!--[if IE 9]></video><![endif]-->
    <img src="<%= asset_url config[:images_dir] + '/' + filename + '.png'%>" alt="<%= alt %>" title="<%= alt %>" />
</picture>
