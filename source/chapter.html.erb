---
layout: layout
---
<%# add the chapter title to this page's metadata %>
<% current_page.add_metadata({
    'title' => locals[:title]
}) %>

<article>
    <h1 class="t-heading t-scale-alpha"><%= locals[:title] %></h1>

    <% sitemap.resources.select {|r| r.data.chapter == locals[:title] }.sort_by {|r| r.data.weight }.each do |section| %>
        <section class="panel" id="<%= section.data.title.urlize %>">
            <div class="l-wrapper">
                <h2 class="t-heading t-scale-beta"><%= section.data.title %></h2>
                <div class="content">
                    <%= section.render %>
                </div>
            </div>
        </section>
    <% end %>
</article>
